// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl is optional - only needed if using connection pooling
  // directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id // Use Supabase auth user ID
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  papers        Paper[]
  processingJobs ProcessingJob[]
}

model Paper {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title            String?
  intent           String?
  targetVenue      String?
  paperContent     String   @db.Text
  fileName         String?
  coreClaims       String   @db.Text // JSON string of claims array
  riskSignal       String?  @db.Text
  comparators      String?  @db.Text // JSON string of comparators
  fullAnalysis     String?  @db.Text // JSON string of full analysis results
  commitId         String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  reviewRuns       ReviewRun[]

  @@index([userId])
}

model ProcessingJob {
  id            String   @id @default(cuid())
  userId        String?  // Nullable for anonymous uploads
  user          User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessionId     String?  // Session identifier for anonymous uploads
  ipAddress     String?  // IP address for rate limiting
  fileName      String
  storageKey    String   // Supabase Storage path
  bucket        String   // "papers" or "temp"
  status        String   // "uploading" | "uploaded" | "processing" | "completed" | "failed"
  extractedText String?  @db.Text
  error         String?  @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@index([sessionId])
  @@index([status])
  @@index([ipAddress])
  @@index([createdAt]) // For cleanup queries
}

model UploadRateLimit {
  id        String   @id @default(cuid())
  ipAddress String   @unique
  count     Int      @default(1)
  resetAt   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ipAddress])
  @@index([resetAt]) // For cleanup queries
}

model Venue {
  id          String   @id @default(cuid())
  name        String
  fieldFamily String
  spec        String   @db.Text // JSON string of VenueSpec
  version     Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  reviewRuns  ReviewRun[]

  @@unique([name, version])
}

model ReviewRun {
  id              String   @id @default(cuid())
  paperId         String
  paper           Paper    @relation(fields: [paperId], references: [id], onDelete: Cascade)
  venueId         String
  venue           Venue    @relation(fields: [venueId], references: [id])
  venueIntake     String   @db.Text // JSON string of VenueIntake
  reviewerReports String   @db.Text // JSON string of ReviewerReport[]
  metaReviewerReport String @db.Text // JSON string of MetaReviewerReport
  decisionForecast String   @db.Text // JSON string of decision probabilities
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  requiredChanges RequiredChange[]

  @@index([paperId])
  @@index([venueId])
}

model RequiredChange {
  id            String   @id @default(cuid())
  reviewRunId   String
  reviewRun     ReviewRun @relation(fields: [reviewRunId], references: [id], onDelete: Cascade)
  claimId       String?
  sectionId     String?
  priority      Int      // 1-5, 1 = highest
  description   String   @db.Text
  action        String   // "narrow" | "scope" | "add-boundary" | etc.
  applied       Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([reviewRunId])
  @@index([claimId])
}

